<Window x:Class="PongClient.View.LobbyWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PongClient.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LobbyWindow">

    <Window.Background>
        <ImageBrush ImageSource="LoginBackground.png"></ImageBrush>
    </Window.Background>

    <StackPanel>
        <Label Content="Pong Game Lobby" HorizontalAlignment="Center" FontSize="25"></Label>
        <Label Content=" " HorizontalAlignment="Center" FontSize="30"></Label>
        <Label Content="Do You Want To Play Again?" HorizontalAlignment="Center" FontSize="20"></Label>
        <Label Content="Pick Position To Play" HorizontalAlignment="Center" FontSize="20"></Label>
        <Button Content="Left Side" Width="100" Height="25" Margin="0 20 0 0" Command="{Binding LoginCommand}"/>
        <Button Content="Right Side" Width="100" Height="25" Margin="0 20 0 0" Command="{Binding LoginCommand}"/>
    </StackPanel>
    </Window>
